<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Joke WebApp - Results</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <main class="container">
    <h1>Here are your jokes <%= name ? (", " + name) : "" %>!</h1>

    <div class="jokes">
      <% jokes.forEach(j => { %>
        <div class="joke-card">
          <% if (j.type === 'single') { %>
            <p><%= j.joke %></p>
          <% } else if (j.type === 'twopart') { %>
            <p><strong><%= j.setup %></strong></p>
            <p><em><%= j.delivery %></em></p>
          <% } %>

          <% if (j.flags) { %>
            <%
              const filteredFlags = Object.keys(j.flags)
                .filter(f => j.flags[f] && f !== 'racist' && f !== 'sexist');
            %>
            <% if (filteredFlags.length > 0) { %>
              <p>Flags: <%= filteredFlags.join(', ') %></p>
            <% } %>
          <% } %>
        </div>
      <% }) %>
    </div>

    <div class="actions">
      <a href="/">Get another joke</a>
    </div>
  </main>
</body>
</html>
